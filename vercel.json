{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "build": {
        "env": {
            "PYTHONPATH": ".",
            "FLASK_ENV": "production",
            "FLASK_APP": "app.py",
            "DATABASE_URL": "sqlite:///tcm_assistant.db"
        }
    }
} 