{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "functions": {
        "app.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "build": {
        "env": {
            "PYTHONPATH": ".",
            "FLASK_DEBUG": "0",
            "FLASK_APP": "app.py",
            "DATABASE_URL": "sqlite:///:memory:"
        }
    }
} 